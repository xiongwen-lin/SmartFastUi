<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true"  android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/theme_button_color" android:startColor="@color/theme_button_color" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
    <item android:state_enabled="true"  android:state_pressed="true">
        <shape>
            <gradient android:endColor="@color/theme_pressing_on_color" android:startColor="@color/theme_pressing_on_color" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:endColor="@color/button_un_click_bg" android:startColor="@color/button_un_click_bg" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
</selector>